@model Uplift.Models.progress

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Admin Details</h1>

<div>
    <h4>User Progress</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Username
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdentityUser.UserName)
        </dd>
        <dt class="col-sm-2">
            Create Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
        <dt class="col-sm-2">
            Flights Climbed
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.flights)
        </dd>
        <dt class="col-sm-2">
            Steps
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.steps)
        </dd>
        <dt class="col-sm-2">
            Run/Walk Distance
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.distance)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
